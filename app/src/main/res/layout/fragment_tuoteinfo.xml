<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raivogaming.vegescanner.TuoteinfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tuoteinfo_tuotekuva"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="20dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tuotteennimitext"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:layout_below="@id/tuoteinfo_tuotekuva"
            android:gravity="center"
            android:text="Tuotteen nimi:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tuotekuvausteksti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tuotteennimitext"
            android:text="Tuotteen kuvaus comes here"
            android:textColor="#000"
            android:textSize="20sp"
            android:padding="20dp"/>

        <RatingBar
            android:id="@+id/tuotteenratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tuotekuvausteksti"
            android:layout_centerHorizontal="true"
            android:isIndicator="true"/>

        <ImageView
            android:id="@+id/imageView"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/vegaani_icon" />

        <ImageView
            android:padding="10dp"
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView"
            app:srcCompat="@drawable/gluteeniton_icon" />

    </RelativeLayout>

</FrameLayout>
